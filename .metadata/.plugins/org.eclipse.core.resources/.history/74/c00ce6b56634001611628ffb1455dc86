package ws;

import umc.sd.banco.Conta;

public class ServicoConta {
	
	public String[] consultarDadosConta(int idConta) {
		
		//Consulta do deposito
		
		System.out.println("Dentro do método consultarDadosConta! ");
		
		String[] dadosConta = null;
			
		try {
			Conta conta = new Conta();
			conta.setId(idConta);
			
			if (conta.recuperar()) {
				
				dadosConta = new String[2];
				
				dadosConta[0] = conta.getNome();
				
				dadosConta[1] = Double.toString(conta.getSaldo());
				
			} else {
				
				System.out.println("Não foi possível recuperar a conta com o idConta " + idConta);
				
			}
		
		}
		catch (Exception e) {
			
			System.out.println("Erro no serviço consultar os dados da conta(consultarDadosConta): " + e.getMessage());
			
		}
			
		return dadosConta;		
	}
	
	

	public boolean cadastroConta(String nome, String senha) {
		
		
		//Para cadastrar
		System.out.println("Dentro do método cadastroConta ");
		
		Conta cont = new Conta();
		
		
		try {
			
			if (cont.cadastrar(nome, senha)) {
				
				System.out.println("Conta foi cadastrada com sucesso.");
				
				return true;
				
			} 
			else {
				
				System.out.println("Conta não foi cadastrada.");
				
				return false;
			}
		
		}
		catch (Exception e) {
			
			System.out.println("Erro no serviço de cadastro conta(cadastroConta): " + e.getMessage());
			
		}
			
		return false;
		
	}
	
	
	public boolean saqueConta(double valor, int idConta, String senha) {
		
		System.out.println("Dentro do método saqueConta!");
		
		Conta conta = new Conta();
		
		conta.setId(idConta);
		
		conta.setSenha(senha);
		
		try {
			if (conta.saque(valor)) {
				System.out.println("Saque realizado com sucesso!");
				return true;
				
			} else {
				System.out.println("Saque não foi realizado!");
				return false;
			}
		
		}
		catch (Exception e) {
			
			System.out.println("Erro no serviço saque de conta(saqueConta): " + e.getMessage());
			
		}
			
		return false;		
	}
	
	public boolean depositoConta(double valor, int idConta, String senha) {
		
		//Deposito na conta
		
		System.out.println("Dentro do método depositoConta!");
		
		Conta conta = new Conta();
		
		conta.setId(idConta);
		
		conta.setSenha(senha);
		
		try {
			
			if (conta.deposito(valor)) {
				
				System.out.println("Deposito foi realizado com sucesso!");
				
				return true;
				
				
			}
			else {
				
				System.out.println("Deposito não foi realizado!");
				
				return false;
			}
		
		}
		catch (Exception e) {
			
			System.out.println("Erro no serviço de deposito em conta(depositoConta): " + e.getMessage());
			
		}
			
		return false;		
	}
	

}
